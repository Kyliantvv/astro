---
import Weblayout from "../layouts/Layout.astro";
---

<Weblayout langage="fr" title="LegendWeb">

    <div class="parlerdevous">
        <div class="flextext">
            <h1>Parlez-nous de votre projet</h1>
        </div>
        <div class="flextext">
            <p>Vous avez un projet en tête ? Vous souhaitez en discuter avec nous ? Remplissez le formulaire ci-dessous et 
                nous vous recontacterons dans les plus brefs délais.</p>
        </div>
        <div class="fleximg">
            <img src="/assets/plume.svg" alt="">
        </div>
    </div>




        <div class="container">
            <div class="contact-info">
                <h2>Passez nous dire bonjour</h2>
                <div class="info">
                    <img src="email-icon.png" alt="email icon">
                    <p>contact@legendweb.fr</p>
                </div>
                <div class="info">
                    <img src="phone-icon.png" alt="phone icon">
                    <p>+33 6 66 66 66 66</p>
                </div>
                
                <!-- Localisations -->
                <div class="locations">
                        <p><strong>Paris</strong><br>32 rue de Mogador, 75009 Paris</p>
                </div>
            </div>
    
            <!-- Partie droite: Formulaire -->
            <div class="formulaire">
                <form action="#" method="post">
                    <label for="prenom">Prénom</label>
                    <input type="text" id="prenom" name="prenom" required>
    
                    <label for="nom">Nom</label>
                    <input type="text" id="nom" name="nom" required>
    
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required>
    
                    <label for="phone">Numéro de téléphone</label>
                    <input type="tel" id="phone" name="phone">
    
                    <label for="message">Dites-nous en plus !</label>
                    <textarea id="message" name="message"></textarea>
    
                    <!-- Case à cocher pour accepter les conditions -->
                    <div class="checkbox">
                        <input type="checkbox" id="consent" name="consent" required>
                        <label for="consent">
                            Cochez cette case pour confirmer que vous êtes d'accord pour que nous traitions vos informations...
                        </label>
                    </div>
    
                    <button type="submit" class="btn-submit">Soumettre ma demande</button>
                </form>
            </div>
        </div>
    




</Weblayout>
      